<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShriGo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShriGo.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/ShriGo_Logo8.png" style="height:100px; width:120px" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContactUs">ContactUs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">AboutUs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SignIn">SignIn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SignUp">SignUp</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Profile">Profile</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
     </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <br />
    <!-----------Refrence-Row--------------->
    <div class="container-fluid referencebg">
        <div class="row">
            @* <hr style="border-top: 5px solid darkblue"  /> *@
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <!-----------Logo and Address ------->
                        <div class="row-cols-1">
                            <img src="~/img/ShriGo_Logo8.png" style="height:100px; width:120px" />
                        </div>
                        <div class="row-cols-1">
                            <p><span class="glyphicon glyphicon-map-marker text-warning p-3"></span>Plot no-04, adj. to Loyola College Road, Mangapuram Colony</p>
                            <p>, Hyderabad, Telangana 500010, India</p>
                        </div>
                    </div>
                    <!-----------Social media------->
                    <div class="col-md-3">
                        <h3>Media</h3>
                        <hr />
                        <ul>
                            <li style="display:block"><a href="#" class="icon-link"><i class="bi bi-linkedin"></i></a></li>
                            <li style="display:block"><a href="https://www.instagram.com/shriaitech?igsh=MThicHV3NnVzMWlzZA==" target="_blank" class="icon-link"><i class="bi bi-instagram"> Instagram </i></a></li>
                            <li style="display:block"><a href="#" class="icon-link"><i class="bi bi-twitter"></i></a></li>
                            <li style="display:block"><a href="#" class="icon-link"><i class="bi bi-facebook"></i></a></li>
                        </ul>
                    </div>
                    <!-----------Company------->
                    <div class="col-md-3">
                        <h3>Company</h3>
                        <hr />
                        <ul>
                            <li style="display:block"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li style="display:block"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Products">Products</a></li>
                            <li style="display:block"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                            <li style="display:block"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
                            <li style="display:block"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                        </ul>
                    </div>
                    <!-----------Contact Us------->
                    <div class="col-md-3">
                        <h3>Contact</h3>
                        <hr />
                        <ul>
                            <li style="display:block"><a><span class="glyphicon glyphicon-phone p-3"></span> +91 8374499001</a></li>
                            <li style="display:block"><a><span class="glyphicon glyphicon-envelope p-3"></span> shripavanb@shrigo.in</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <!--------Footer-------------------->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ShriGo -Powered by <a href="https://shriaitech.in/" target="_blank">shriaitech.in</a></a>
        </div>
    </footer>
    <!-------Script---------------------->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
