    // Sample dynamic data (e.g., from an API call)
    const contacts = [
        { name: "Alice Smith", email: "alice@example.com", phone: "555-1234" },
        { name: "Bob Johnson", email: "bob@example.com", phone: "555-5678" },
        { name: "Charlie Williams", email: "charlie@example.com", phone: "555-8765" },
        { name: "David Brown", email: "david@example.com", phone: "555-4321" }
    ];

    document.addEventListener('DOMContentLoaded', () => {
        const datalist = document.getElementById('contactOptions');
        const contactInput = document.getElementById('contactInput');
        const contactButton = document.getElementById('contactButton');
        const modalDetails = document.getElementById('modalContactDetails');

        // Function to populate the datalist dynamically
        function populateDatalist() {
            contacts.forEach(contact => {
                const option = document.createElement('option');
                // Store the full name as the value, and potentially other data using data attributes
                option.value = contact.name;
                // The label can also be used (though browser display is inconsistent)
                option.label = contact.email;
                datalist.appendChild(option);
            });
        }

        // Function to handle input changes and enable/disable the button
        function handleInputChange() {
            const inputValue = contactInput.value;
            const contactExists = contacts.some(contact => contact.name === inputValue);
            contactButton.disabled = !contactExists; // Disable button if the entered value is not a valid contact name
        }

        // Function to handle the contact button click (opens modal)
        function handleContactClick() {
            const selectedName = contactInput.value;
            const selectedContact = contacts.find(contact => contact.name === selectedName);

            if (selectedContact) {
                modalDetails.innerHTML = `
                    <p><strong>Name:</strong> ${selectedContact.name}</p>
                    <p><strong>Email:</strong> ${selectedContact.email}</p>
                    <p><strong>Phone:</strong> ${selectedContact.phone}</p>
                `;
                // Manually show the Bootstrap modal
                const contactModal = new bootstrap.Modal(document.getElementById('contactModal'));
                contactModal.show();
            }
        }

        // Initialize the datalist
        populateDatalist();

        // Add event listeners
        contactInput.addEventListener('input', handleInputChange);
        contactButton.addEventListener('click', handleContactClick);
    });
/*------------------------------------------------*/
</script>
